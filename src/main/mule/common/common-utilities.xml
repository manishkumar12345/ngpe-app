<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:os="http://www.mulesoft.org/schema/mule/os" xmlns:google-calendar="http://www.mulesoft.org/schema/mule/google-calendar"
	xmlns:db="http://www.mulesoft.org/schema/mule/db"
	xmlns:email="http://www.mulesoft.org/schema/mule/email" xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core" xmlns="http://www.mulesoft.org/schema/mule/core" xmlns:doc="http://www.mulesoft.org/schema/mule/documentation" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd
http://www.mulesoft.org/schema/mule/email http://www.mulesoft.org/schema/mule/email/current/mule-email.xsd
http://www.mulesoft.org/schema/mule/db http://www.mulesoft.org/schema/mule/db/current/mule-db.xsd
http://www.mulesoft.org/schema/mule/google-calendar http://www.mulesoft.org/schema/mule/google-calendar/current/mule-google-calendar.xsd
http://www.mulesoft.org/schema/mule/os http://www.mulesoft.org/schema/mule/os/current/mule-os.xsd">
	
	
	<sub-flow name="send-mail-after-book-appointment" doc:id="a9dfdb09-475e-4164-bcc2-ed37e9e4fa6e" >
		<choice doc:name="Choice" doc:id="c4aedffa-9311-40e6-b768-6fca7f178a7c" >
			<when expression="#[vars.operationType=='book-appointment']">
<!-- [STUDIO:"appointmentData"]				<set-variable value="#[%dw 2.0&#10;output application/json&#10;&#45;&#45;-&#10;vars.appointmentData.generatedKeys&#93;" doc:name="appointmentData" doc:id="773939e9-361d-4b0b-a318-6bb07f49104a" variableName="appointmentData" /> [STUDIO] -->
				<db:query-single doc:name="get-patient-and-doctor-record" doc:id="86d3f423-1e34-4c45-bf4f-e2ddc9ed985d" config-ref="Database_Config" target="sendEmailData">
			<db:sql><![CDATA[SELECT app.start_time,app.end_time,app.symptoms, app.date,patient.first_name as patient_first_name, patient.last_name as patient_last_name, patient.email as patient_email, patient.phone_number as patient_phone,
doctor.first_name as doctor_first_name, doctor.last_name as doctor_last_name ,doctor.email as doctor_email,doctor.phone_number as doctor_phone FROM appointments app
LEFT JOIN  users patient ON patient.id = app.user_id
LEFT JOIN  users doctor ON doctor.id = app.doctor_id
WHERE app.appointment_id= :appointment_id]]></db:sql>
			<db:input-parameters><![CDATA[#[{
//	patient_id: vars.appointmentData.user_id,
//	doctor_id: vars.appointmentData.doctor_id
appointment_id: vars.appointmentData.generatedKeys.appointment_id
}]]]></db:input-parameters>
		</db:query-single>
				<set-variable value="#[%dw 2.0&#10;output application/json&#10;---&#10;vars.sendEmailData]" doc:name="sendEmailData" doc:id="718a077c-fe5a-4852-b010-cb23e6bb7385" variableName="sendEmailData" />
				<email:send doc:name="Send Main to Patient" doc:id="bb407981-54d3-46c2-a5b7-b5867d944e26" config-ref="Email_SMTP" fromAddress="satish.kumar@bitsinglass.com" subject="Notification from NGPE APP">
			<email:to-addresses>
				<email:to-address value="#[vars.sendEmailData.patient_email]" />
			</email:to-addresses>
			<email:body contentType="text/plain">
				<email:content><![CDATA[#["Hi " ++ vars.sendEmailData.patient_first_name ++ "," ++ "thank you for making an appointment with NGPE App on " ++ vars.sendEmailData.date ++  " at " ++ vars.sendEmailData.start_time ++ "." ++ " please have patience for the confirmation "]]]></email:content>
			</email:body>
		</email:send>
				<email:send doc:name="Send Main to Doctor" doc:id="dd2097e5-a814-4595-a3fb-668dfa86e89b" config-ref="Email_SMTP" fromAddress="satish.kumar@bitsinglass.com" subject="Notification from NGPE APP">
			<email:to-addresses>
				<email:to-address value="#[vars.sendEmailData.doctor_email]" />
			</email:to-addresses>
			<email:body contentType="text/plain">
				<email:content><![CDATA[#["Hi "++ vars.sendEmailData.doctor_first_name++ " " ++ vars.sendEmailData.doctor_last_name ++ " One appointment request on " ++ vars.sendEmailData.date ++ "at "++ vars.sendEmailData.start_time ++ "to " ++ vars.sendEmailData.end_time ++" for "++ vars.sendEmailData.patient_first_name ++" "++ vars.sendEmailData.patient_last_name]]]></email:content>
			</email:body>
		</email:send>
			</when>
		</choice>
	</sub-flow>
	<sub-flow name="common-utilitiesSub_Flow" doc:id="3cb67864-659e-49c8-bb4a-8bd70b128078" >
		<google-calendar:create-calendars-events-by-calendar-id doc:name="Events insert" doc:id="78f0dca8-3534-42ac-a832-596a906af95b" config-ref="Google_Calendar_Connector_Config" calendarId="satish.kumar@bitsinglass.com"/>
	</sub-flow>
</mule>
